<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="526.0" prefWidth="342.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="228.0" prefWidth="342.0">
         <children>
            <VBox alignment="CENTER" prefHeight="77.0" prefWidth="342.0">
               <children>
                  <Label fx:id="timeLabel" text="Время" textAlignment="CENTER">
                     <font>
                        <Font name="System Bold" size="19.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="hoursField" alignment="CENTER" maxWidth="35.0" text="00" />
                  <TextField fx:id="minutesField" alignment="CENTER" maxWidth="35.0" text="00" />
                  <TextField fx:id="secondsField" alignment="CENTER" maxWidth="35.0" text="00" />
                  <Button fx:id="sendBtn" mnemonicParsing="false" text="Добавить" />
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox fx:id="eventsVBox" alignment="TOP_CENTER" prefHeight="357.0" prefWidth="342.0" />
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label fx:id="eventLabel" text="Здесь события">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
         </children>
      </VBox>
   </children>
</VBox>
